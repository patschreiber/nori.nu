- provide :title, 'Home'
.width-100.main-background-gradient
  .container
    .row
      .col-md-3.col-xs-12
        .wide-margin-top
          = link_to image_tag(logo_image_path), root_path

    .row
      .col-md-6
        %h1.text-center 
          Sign up. Play with your friends. 
        %p
          Nori is a collection game that lets you collect items, trade them, and show them off. Certain items only appear in certain regions, so you'll need to trade with people around the world in order to collect all of the items within a set. 
      .col-md-3.col-md-offset-2
        .text-center
          - flash.each do |key, value|
            %div{ :class => "text-danger error-message" }= value  
        .login-form
          = form_for(:session, url: sessions_path) do |f|
            .row
              .col-md-12
                .pull-right
                  = f.label :username
                  = f.text_field :username
            .row
              .col-md-12
                .pull-right
                  = f.label :password
                  = f.password_field :password
            .row
              .col-md-8.pull-right
                = f.submit "Submit", :class => "btn btn-primary btn-block"
            .row
              .col-md-8.pull-right
                .forgot-password-margin
                  = link_to "Forgot Password?", "#"
    .wide-margin-top
    
    = render 'shared/feature_list_main_page'



