- if user_signed_in?
  .navbar
    .container
      %a{ :href => root_path, :alt => "Home Path" }
        .navbar-brand.pull-left
      .navbar-header.pull-right
        .pull-right
          %ul.main-user-menu.pull-right.hidden-xs
            %li
              = link_to game_path, 'data-no-turbolink' => true do 
                %span{ :class => 'ss-icon header-icons' }
                  &#xE800;
                Game
            %li
              = link_to current_user do
                %span{ :class => 'ss-icon header-icons' }
                  &#x1F464;
                Profile
            %li
              = link_to "#" do
                %span{ :class => 'ss-icon header-icons' }
                  &#x2709;
                Inbox
            %li
              = link_to "#" do
                %span{ :class => 'ss-icon header-icons' }
                  &#x1F465;
                Friends
            %li.dropdown
              = link_to "#", :class => "dropdown-toggle", "data-toggle"=>"dropdown" do
                %span{ :class => 'ss-icon header-icons' }
                  &#x2026;  
              %ul.dropdown-menu.pull-right
                %li= link_to 'Settings', edit_user_path(current_user)
                %li= link_to 'Signout', signout_path, method: "delete"


        %ul.main-user-menu-sm.pull-right.visible-xs
          %li
            = link_to game_path, 'data-no-turbolink' => true do 
              %span{ :class => 'ss-icon header-icons' }
                &#xE800;
          %li
            = link_to current_user do
              %span{ :class => 'ss-icon header-icons' }
                &#x1F464;
          %li
            = link_to current_user do
              %span{ :class => 'ss-icon header-icons' }
                &#x2709;
          %li
            = link_to "#" do
              %span{ :class => 'ss-icon header-icons' }
                &#x1F465;
          %li.dropdown
            = link_to "#", :class => "dropdown-toggle", "data-toggle"=>"dropdown" do
              %span{ :class => 'ss-icon header-icons' }
                &#x2026;  
            %ul.dropdown-menu.pull-right
              %li= link_to 'Settings', edit_user_path(current_user)
              %li= link_to 'Signout', signout_path, method: "delete"
      #marker
- else 
  .container
    .row
      .wide-margin-top
      .col-md-3.col-xs-8
        = link_to image_tag(logo_image_path), root_path
      .col-md-9.col-xs-12
        %ul.main-user-menu.main-index-nav
          %li
            = link_to "Play", "#"
          %li
            = link_to "News", "#"
          %li
            = link_to "Forums", "#"
        .btn.btn-default
          = link_to "Sign In", signin_path
      #marker


      -#%ul.main-user-menu.pull-right

