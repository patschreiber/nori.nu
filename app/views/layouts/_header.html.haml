  .row.not-signed-in
    .header-margin
      %div
        - if signed_in?
          .header-margin-top
          .col-xs-4.col-sm-3.col-md-2
            = link_to image_tag(logo_image_path), root_path

          .col-md-6 
            %ul.main-user-menu
              %li
                = link_to 'Home', '#'
              %li
                = link_to "Profile", edit_user_path(current_user)
              %li
                = link_to "Settings", "#"
              %li
                = link_to "Sign out", signout_path, method: "delete"
    #marker