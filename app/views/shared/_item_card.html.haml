.item-found.trash-item
  .hidden-xs.hidden-sm.hidden-md.hidden-lg
    -# We don't want the item ID to be visible
    .item-id
  .row
    .col-xs-12
      %h4
        .name
  .row
    .col-xs-12
      .pull-left
        .min-equip-player-level
          Req. Level
          %span{ :class => "min-equip-player-level-val" }
      .pull-right
        .tier
          Tier
          %span{ :class => "tier-val" }

  .row
    .col-xs-2
      .item-image
        Image goes here
    .col-xs-6
      -# When an item is rolled, it shows up here
      .row
        .attack
          .col-xs-3
            Attack
          .col-xs-4
            %span{ :class => "attack-val" }
      .row
        .defense
          .col-xs-3
            Defense
          .col-xs-4
            %span{ :class => "defense-val" }
      .row
        .luck
          .col-xs-3
            Luck
          .col-xs-4
            %span{ :class => "luck-val" }
      .row
        .stealth
          .col-xs-3
            Stealth
          .col-xs-4
            %span{ :class => "stealth-val" }
      .row
        .value
          .col-xs-3
            Value
          .col-xs-4
            %span{ :class => "monetary-val" }
  .row
    .col-md-12
      .flavor-text
  .row
    .col-xs-6.action
      .item-buttons.hidden-element
        .save.pull-left.btn.btn-default
          = link_to "#" do
            %span{ :class => 'ss-icon header-icons' }
              &#x21AA;
            Save
    .col-xs-6.action
      .item-buttons.hidden-element
        .trash.pull-right.btn.btn-default
          = link_to "#" do
            %span{ :class => 'ss-icon header-icons' }
              &#xE0D0;
            Discard