.row
  = form_for @user, { :url => { :controller => 'registrations', :action => 'create' }, :class => 'signup-form' }  do |f|
    = render 'shared/error_messages'

    -# First Name and Last Name should be optional 
    -#.pull-left
      -#= f.text_field :first_name, placeholder: 'First Name', :size => 17
    -#.pull-right
      -#= f.text_field :last_name, placeholder: 'Last Name', :size => 18
    .col-xs-12.col-sm-12.col-md-12.col-lg-12
      .pull-left.width-100
        = f.text_field :username, placeholder: 'Desired Username', :size => 53, :class => 'skinny-margin-top width-100'
    .col-xs-12.col-sm-12.col-md-12.col-lg-12
      .pull-left.width-100
        = f.text_field :email, placeholder: 'Email', :size => 53, :class => 'skinny-margin-top width-100' 
    .visible-lg
      .col-xs-6.col-sm-6.col-md-6.col-lg-6
        .pull-left
          = f.password_field :password, placeholder: 'Password', :size => 17,  :class => 'skinny-margin-top'
      .col-xs-6.col-sm-6.col-md-6.col-lg-6
        .pull-right
          = f.password_field :password_confirmation, placeholder: 'Confirm Password', :size => 18, :class => 'skinny-margin-top'
    
    .visible-md
      .col-md-6
        .pull-left
          = f.password_field :password, placeholder: 'Password', :size => 13,  :class => 'skinny-margin-top'
      .col-md-6
        .pull-right
          = f.password_field :password_confirmation, placeholder: 'Confirm Password', :size => 13, :class => 'skinny-margin-top'

    .visible-sm
      .col-sm-6
        .pull-left
          = f.password_field :password, placeholder: 'Password', :size => 32,  :class => 'skinny-margin-top'
      .col-sm-6
        .pull-right
          = f.password_field :password_confirmation, placeholder: 'Confirm Password', :size => 32, :class => 'skinny-margin-top'
    
    .visible-xs
      .col-xs-12
        .pull-left.width-100
          = f.password_field :password, placeholder: 'Password', :class => 'skinny-margin-top width-100'
      .col-xs-12
        .pull-right.width-100
          = f.password_field :password_confirmation, placeholder: 'Confirm Password', :class => 'skinny-margin-top width-100'

    .row
      = f.submit "Create it!", :class => 'btn btn-success width-100 skinny-margin-top'