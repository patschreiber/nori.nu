.row
  /#map-canvas
.row
  .container
    #{@user.username} 
    %br
    %hr
    Player Level: 
    %span{ :class => 'playerlevel' }  
      #{@level}

    .experience
      Experience: 
      %span{ :class => 'current-experience' } 
        = @current_experience
      \/
      %span{ :class => 'next-level-exp' }
        = @next_level_experience
    .level-from-db

    / TODO Make Buttons to click on
    = link_to "Level Up", "#", :class => "levelup", 'data-no-turbolink' => true
    = link_to "Light Training", "#", :class => 'light-button', 'data-no-turbolink' => true
    = link_to "Medium Training", "#", :class => 'medium-button', 'data-no-turbolink' => true
    = link_to "Heavy Training", "#", :class => 'heavy-button', 'data-no-turbolink' => true