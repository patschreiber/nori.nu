- provide :title, "#{@user.username}#{@user_title}".html_safe

.container
  .row
    .col-md-6
      %h2
        = @user.username.capitalize
      %hr{ :class => "hr-margin" }

  .row
    .col-sm-6.col-md-6
      .col-sm-6.col-md-3
        .thumbnail
          -# Level-Based picture goes in replacement of these brs. img src...
          %br
          %br
          %br
        %h3
          Lv. 
          = @user_stats.player_level
        %span{ :class => 'ss-icon header-icons' }
          &#x1F4B2;
        = @user_stats.current_gold

      .col-md-9
        -# Head
        .row
          .col-md-3
            .thumbnail
              .neck
              %br
              %br
          .col-md-3
            .thumbnail
              .head
              %br
              %br
          .col-md-3 
            .thumbnail
              .ring
              %br
              %br
        -# Body
        .wide-margin-top
        .row
          .col-md-3
            .thumbnail
              .weapon
              %br
              %br
          .col-md-3
            .thumbnail
              .body
              %br
              %br
          .col-md-3
            .thumbnail
              .defense-item
              %br
              %br
        -# Feet
        .wide-margin-top
        .row
          .col-md-3.col-md-offset-3
            .thumbnail
              .legs
              %br
              %br
          .col-md-3
            .thumbnail
              .feet
              %br
              %br


    .col-xs-6.col-sm-6.col-md-6.col-lg-6
      %h4
        Skills
      .row
        .col-xs-3.col-sm-3.col-md-3.col-lg-3
          Attack
          .label.label-default.pull-right
            = @user_stats.attack
        .col-xs-6.col-sm-6.col-md-6.col-lg-6
          .progress
            .progress-bar.progress-margin-bottom-0.progress-bar-warning{:role => "progressbar", :valuemin => "0", :valuemax => "100", :style => "width: #{@percent_to_level}%;", :title => "#{@percent_to_level}% to next skill level"} 
      .row
        .col-xs-3.col-sm-3.col-md-3.col-lg-3
          Defense
          .label.label-default.pull-right
            = @user_stats.defense
        .col-xs-6.col-sm-6.col-md-6.col-lg-6
          .progress
            .progress-bar.progress-margin-bottom-0.progress-bar-warning{:role => "progressbar", :valuemin => "0", :valuemax => "100", :style => "width: #{@percent_to_level}%;", :title => "#{@percent_to_level}% to next skill level"} 
      .row
        .col-xs-3.col-sm-3.col-md-3.col-lg-3
          Stealth
          .label.label-default.pull-right
            = @user_stats.stealth
        .col-xs-6.col-sm-6.col-md-6.col-lg-6
          .progress
            .progress-bar.progress-margin-bottom-0.progress-bar-warning{:role => "progressbar", :valuemin => "0", :valuemax => "100", :style => "width: #{@percent_to_level}%;", :title => "#{@percent_to_level}% to next skill level"} 
      .row
        .col-xs-3.col-sm-3.col-md-3.col-lg-3
          Luck
          .label.label-default.pull-right
            = @user_stats.luck
        .col-xs-6.col-sm-6.col-md-6.col-lg-6
          .progress
            .progress-bar.progress-margin-bottom-0.progress-bar-warning{:role => "progressbar", :valuemin => "0", :valuemax => "100", :style => "width: #{@percent_to_level}%;", :title => "#{@percent_to_level}% to next skill level"} 
  .wide-margin-top
  
  .row.inventory-chest
    = render 'shared/users/user_inventory'

  .row
    .col-sm-6.col-md-6.border-left.border-right
      = render 'shared/users/user_achievements'
    .col-sm-6.col-md-6.border-right
      = render 'shared/users/user_collections'

  .wide-margin-top